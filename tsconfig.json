{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "src",
    "baseUrl": "src/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["**/*.tsx", "**/*.ts", "setupTests.js"]
}
